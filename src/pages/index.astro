  <script>
    const revealElements = document.querySelectorAll('.reveal');
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      { threshold: 0.15 }
    );

    revealElements.forEach((el) => observer.observe(el));

    const card = document.querySelector('[data-parallax-card]');
    const layers = document.querySelectorAll('[data-parallax-depth]');
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (card instanceof HTMLElement && !prefersReducedMotion) {
      const layerEls = Array.from(layers).filter((el): el is HTMLElement => el instanceof HTMLElement);

      const handleMove = (e) => {
        const rect = card.getBoundingClientRect();
        const x = (e.clientX - rect.left) / rect.width - 0.5;
        const y = (e.clientY - rect.top) / rect.height - 0.5;
        const rotateX = y * -6;
        const rotateY = x * 6;
        card.style.transform = `perspective(900px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;

        layerEls.forEach((layer) => {
          const depth = Number(layer.dataset.parallaxDepth || 0.2);
          const translateX = x * depth * 20;
          const translateY = y * depth * 20;
          layer.style.transform = `translate3d(${translateX}px, ${translateY}px, 0)`;
        });
      };

      const reset = () => {
        card.style.transform = 'perspective(900px) rotateX(0deg) rotateY(0deg)';
        layerEls.forEach((layer) => (layer.style.transform = 'translate3d(0,0,0)'));
      };

      card.addEventListener('mousemove', handleMove);
      card.addEventListener('mouseleave', reset);
    }

    const proposalForm = document.querySelector('[data-proposal-form]');
    const statusEl = document.querySelector('[data-form-status]');
    const emailBtn = document.querySelector('[data-compose-email]');
    const waBtn = document.querySelector('[data-compose-whatsapp]');

    const showStatus = (text) => {
      if (!(statusEl instanceof HTMLElement)) return;
      statusEl.textContent = text;
      statusEl.classList.remove('hidden');
    };

    const getContactEmail = () => {
      if (!(proposalForm instanceof HTMLFormElement)) return '';
      return String(proposalForm.dataset.contactEmail || '').trim();
    };

    const getWhatsappNumber = () => {
      if (!(proposalForm instanceof HTMLFormElement)) return '';
      return String(proposalForm.dataset.whatsappNumber || '').trim();
    };

    const getFieldValue = (name) => {
      if (!(proposalForm instanceof HTMLFormElement)) return '';
      const el = proposalForm.elements.namedItem(name);
      if (!el) return '';
      if (el instanceof HTMLInputElement || el instanceof HTMLTextAreaElement || el instanceof HTMLSelectElement) {
        return String(el.value || '').trim();
      }
      return '';
    };

    const buildMessage = () => {
      const parts = [
        `Nama: ${getFieldValue('name')}`,
        `Perusahaan: ${getFieldValue('company') || '-'}`,
        `Email: ${getFieldValue('email')}`,
        `WhatsApp: ${getFieldValue('phone') || '-'}`,
        `Layanan: ${getFieldValue('service')}`,
        `Lokasi: ${getFieldValue('location')}`,
        `Estimasi: ${getFieldValue('volume') || '-'}`,
        `Timeline: ${getFieldValue('timeline') || 'Fleksibel'}`,
        '',
        'Detail:',
        getFieldValue('message'),
      ];
      return parts.join('\n');
    };

    const ensureValid = () => {
      if (!(proposalForm instanceof HTMLFormElement)) return false;
      const ok = proposalForm.checkValidity();
      if (!ok) {
        proposalForm.reportValidity();
        showStatus('Lengkapi kolom yang wajib diisi untuk melanjutkan.');
      }
      return ok;
    };

    if (proposalForm instanceof HTMLFormElement) {
      proposalForm.addEventListener('submit', (e) => {
        e.preventDefault();
        showStatus('Gunakan tombol "Kirim via Email" atau "Kirim via WhatsApp" untuk mengirim permintaan.');
      });
    }

    if (emailBtn instanceof HTMLButtonElement) {
      emailBtn.addEventListener('click', () => {
        if (!ensureValid()) return;
        const to = getContactEmail();
        if (!to) {
          showStatus('Email tujuan belum diatur.');
          return;
        }
        const subject = encodeURIComponent('Request Proposal — PT Neo Perdana Abadi');
        const body = encodeURIComponent(buildMessage());
        window.location.href = `mailto:${encodeURIComponent(to)}?subject=${subject}&body=${body}`;
      });
    }

    if (waBtn instanceof HTMLButtonElement) {
      waBtn.addEventListener('click', () => {
        if (!ensureValid()) return;
        const number = getWhatsappNumber();
        if (!number) {
          showStatus('Nomor WhatsApp tujuan belum diatur.');
          return;
        }
        const text = encodeURIComponent(buildMessage());
        const url = `https://wa.me/${encodeURIComponent(number)}?text=${text}`;
        const w = window.open(url, '_blank');
        if (w) w.opener = null;
      });
    }
  </script>
