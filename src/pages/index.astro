  <script>
    const revealElements = document.querySelectorAll('.reveal');
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      { threshold: 0.15 }
    );

    revealElements.forEach((el) => observer.observe(el));

    const card = document.querySelector('[data-parallax-card]');
    const layers = document.querySelectorAll('[data-parallax-depth]');
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (card && !prefersReducedMotion) {
      const handleMove = (e) => {
        const rect = card.getBoundingClientRect();
        const x = (e.clientX - rect.left) / rect.width - 0.5;
        const y = (e.clientY - rect.top) / rect.height - 0.5;
        const rotateX = y * -6;
        const rotateY = x * 6;
        card.style.transform = `perspective(900px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;

        layers.forEach((layer) => {
          const depth = Number(layer.dataset.parallaxDepth || 0.2);
          const translateX = x * depth * 20;
          const translateY = y * depth * 20;
          layer.style.transform = `translate3d(${translateX}px, ${translateY}px, 0)`;
        });
      };

      const reset = () => {
        card.style.transform = 'perspective(900px) rotateX(0deg) rotateY(0deg)';
        layers.forEach((layer) => (layer.style.transform = 'translate3d(0,0,0)'));
      };

      card.addEventListener('mousemove', handleMove);
      card.addEventListener('mouseleave', reset);
    }
  </script>
